<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- ===================== Appenders ===================== -->

    <!-- Console appender -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
        <!-- Only INFO and above for console -->
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>INFO</level>
        </filter>
    </appender>

    <!-- File appender with rolling -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/application.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/application.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>14</maxHistory>
            <totalSizeCap>100MB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- ===================== Loggers ===================== -->

    <!-- Test step logger -->
    <logger name="TEST_STEP" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </logger>

    <!-- Selenium / WebDriverManager / Netty / AsyncHttpClient -->
    <logger name="io.github.bonigarcia.wdm" level="WARN"/>
    <logger name="io.netty" level="WARN"/>
    <logger name="org.asynchttpclient" level="WARN"/>

    <!-- Allure TestNG duplicate listener warning (optional, can ignore) -->
    <logger name="io.qameta.allure.testng.AllureTestNg" level="WARN"/>

    <!-- Root logger -->
    <root level="DEBUG">
        <appender-ref ref="FILE"/>
        <appender-ref ref="CONSOLE"/>
    </root>

</configuration>
